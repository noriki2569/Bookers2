<h1>Book detail</h1>
<table>
    <thead>
        <tr>
            <th colspan="5"></th>
        </tr>
    </thead>
    <tbody>
       <tr>
         <td>
           <%= link_to user_path(@book.user.id) do %>
           <%= image_tag @book.user.get_profile_image(100,100) %></br>
           <%= @book.user.name %>
           <% end %>
         </td>
         <td><%= link_to @book.title, book_path(@book) %></td>
         <td><%= @book.body %></td>
         <td>
           <%= link_to "Edit", edit_book_path(@book), class:"btn btn-outline-secondary btn-block" %>
           </td>
         <td>
           <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-outline-secondary btn-block" %>
           </td>
       </tr>
       </tbody>
</table>

<%= render 'users/list', book: Book.new, user: @book.user %>