<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= image_tag book.user.get_profile_image(80,80) %></td>
         <td><%= link_to book.title , book_path(book) %></td>
         <td><%= book.body %></td>
       </tr>
       <% end %>
       </tbody>
  </table>

<h2>User info</h2>

<%= image_tag current_user.get_profile_image(100,100) %>

<p>name:<%= current_user.name %></p>

<p>introduction</p>

<div>
    <i class="fa-solid fa-user-gear" style="color: #cecece;"></i>
</div>



<h2>New Book</h2>
<%= form_with model: @book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>