<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/1f4e7337aa.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <h2>Bookers</h2>
      <% if user_signed_in? %>
      <li>
        <%= link_to user_path(current_user.id) do %>
        <i class="fas fa-home">Home</i>
        <% end %>
      </li>
      <li>
        <%= link_to users_path do %>
        <i class="fas fa-users"> Users</i>
        <% end %>
      </li>
      <li>
        <%= link_to books_path do %>
        <i class="fas fa-book-open"> Books</i>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fas fa-sign-out-alt"> Log out</i>
        <% end %>
      </li>
      <% else %>
       <li>
        <%= link_to root_path do %>
        <i class="fas fa-home"> Home</i>
        <% end %>
      </li>
      <li>
        <%= link_to about_path do %>
        <i class="fas fa-link"> About</i>
        <% end %>
      </li>
      <li>
        <%= link_to new_user_registration_path do %>
        <i class="fas fa-user-plus"> Sign up</i>
        <% end %>
      </li>
      <li>
         <%= link_to new_user_session_path do %>
        <i class="fas fa-sign-in-alt"> Log in</i>
        <% end %>
      </li>
      <% end %>
    </header>
    <%= yield %>
  </body>

  <footer>
    <div>
      <p>CopyRight Infratop.inc</p>
    </div>
  </footer>
</html>
