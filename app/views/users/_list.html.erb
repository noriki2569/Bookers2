<h2>User info</h2>

<%= image_tag user.get_profile_image(100,100) %>

<p>name <%= user.name %></p>

<p>introduction <%= user.introduction %></p>

<div>
    <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear" style="color: #cecece;"></i>
    <% end %>
</div>



<h2>New Book</h2>
<%= form_with model: book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book',class:"btn btn-sm btn-success" %>

<% end %>