<h1>Bookers</h1>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(@user.id) do %>
        <%= image_tag book.user.get_profile_image(80,80) %>
        <% end %>
        </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    <% end %>
    </tr>
  </tbody>
</table>

<%= render 'list', book: Book.new, user: @user %>